{
    "tags": {
    "allowUnknownTags": true
},
    "source": {
    "include": [
        "src"
    ]
},
    "plugins": ["plugins/markdown"],
    "templates": {
    "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
        "outputSourceFiles": true
    }
},
    "opts": {
    "encoding": "utf8",
        "destination": "docs",
        "recurse": true
},
    "markdown.hardwrap": true,
    "markdown": {
    "hardwrap": true
},
    "metadata": {
    "title": "Iris Document"
}
}
